{
    "git.autofetch": true,
    "python.createEnvironment.trigger": "off",
    "git.confirmSync": false,
    "workbench.colorTheme": "Monokai",
    "editor.lineNumbers": "relative",
    "zenMode.hideLineNumbers": false,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<Leader>",
                "t"
            ],
            "after": [
                "<C-w>",
                "j"
            ]
        },
        // Navigation
        {
            "before": [
                "J"
            ],
            "after": [
                "5",
                "j"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "5",
                "k"
            ]
        },
        {
            "before": [
                "leader",
                "h"
            ],
            "commands": [
                "workbench.action.focusLeftGroup"
            ]
        },
        {
            "before": [
                "leader",
                "j"
            ],
            "commands": [
                "workbench.action.focusBelowGroup"
            ]
        },
        {
            "before": [
                "leader",
                "k"
            ],
            "commands": [
                "workbench.action.focusAboveGroup"
            ]
        },
        {
            "before": [
                "leader",
                "l"
            ],
            "commands": [
                "workbench.action.focusRightGroup"
            ]
        },
        // splits
        {
            "before": [
                "leader",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        {
            "before": [
                "leader",
                "s"
            ],
            "commands": [
                ":split"
            ]
        },
        // panes
        {
            "before": [
                "leader",
                "h"
            ],
            "commands": [
                "workbench.action.focusLeftGroup"
            ]
        },
        {
            "before": [
                "leader",
                "j"
            ],
            "commands": [
                "workbench.action.focusBelowGroup"
            ]
        },
        {
            "before": [
                "leader",
                "k"
            ],
            "commands": [
                "workbench.action.focusAboveGroup"
            ]
        },
        {
            "before": [
                "leader",
                "l"
            ],
            "commands": [
                "workbench.action.focusRightGroup"
            ]
        },
        // Tab management
        {
            "before": [
                "<Leader>",
                "t",
                "t"
            ],
            "commands": [
                ":tabnew"
            ]
        },
        {
            "before": [
                "<Leader>",
                "t",
                "n"
            ],
            "commands": [
                ":tabnext"
            ]
        },
        {
            "before": [
                "<Leader>",
                "t",
                "p"
            ],
            "commands": [
                ":tabprev"
            ]
        },
        {
            "before": [
                "<Leader>",
                "t",
                "o"
            ],
            "commands": [
                ":tabo"
            ]
        },
        {
            "before": [
                "<Leader>",
                "w"
            ],
            "commands": [
                "workbench.action.files.saveFiles"
            ]
        },
        {
            "before": [
                "leader",
                "q"
            ],
            "commands": [
                ":q!"
            ]
        },
        {
            "before": [
                "leader",
                "x"
            ],
            "commands": [
                ":x!"
            ]
        },
        {
            "before": [
                "<S-h>"
            ],
            "commands": [
                ":bprevious"
            ]
        },
        {
            "before": [
                "<S-l>"
            ],
            "commands": [
                ":bnext"
            ]
        },
        // Search
        {
            "before": [
                "<Leader>",
                "t"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": [
                "<Leader>",
                "a"
            ],
            "commands": [
                "workbench.action.showAllSymbols"
            ]
        },
        // Misc
        {
            "before": [
                "[",
                "d"
            ],
            "commands": [
                "editor.action.marker.prev"
            ]
        },
        {
            "before": [
                "]",
                "d"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "leader",
                "p"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-j>"
            ],
            "after": [
                "<down>"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "after": [
                "<up>"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "<C-o>",
                "$"
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "after": [
                "<left>"
            ]
        },
        {
            "before": [
                "<C-enter>"
            ],
            "after": [
                "<C-o>",
                "o"
            ]
        },
        {
            "before": [
                "<C-x>"
            ],
            "after": [
                "<backspace>"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Navigation
        {
            "before": [
                "J"
            ],
            "after": [
                "5",
                "j"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "5",
                "k"
            ]
        },
        // (Un)comment lines
        {
            "before": [
                "<Leader>",
                "c"
            ],
            "commands": [
                "editor.action.addCommentLine"
            ]
        },
        {
            "before": [
                "<Leader>",
                "k"
            ],
            "commands": [
                "editor.action.removeCommentLine"
            ]
        },
        // Identation
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
    ],
    "vim.easymotion": true,
    "vim.gdefault": true,
    "vim.foldfix": true,
    "editor.minimap.enabled": false
}
